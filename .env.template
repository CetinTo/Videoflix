# Django Superuser (created on first start if not present)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=changeme
DJANGO_SUPERUSER_EMAIL=admin@videoflix.com

# Django
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200,http://localhost:5500,http://127.0.0.1:5500,http://localhost:8000,http://127.0.0.1:8000
FRONTEND_URL=http://localhost:4200

# PostgreSQL (Docker: DB_HOST=db)
DB_NAME=videoflix_db
DB_USER=videoflix_user
DB_PASSWORD=change-this-password
DB_HOST=db
DB_PORT=5432

# Redis (Docker: REDIS_HOST=redis)
# REDIS_LOCATION must use the same password as REDIS_PASSWORD
REDIS_HOST=redis
REDIS_PASSWORD=foobared
REDIS_LOCATION=redis://:foobared@redis:6379/1
REDIS_PORT=6379
REDIS_DB=0

# Email (SMTP, e.g. Gmail for activation and reset links)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@videoflix.com
